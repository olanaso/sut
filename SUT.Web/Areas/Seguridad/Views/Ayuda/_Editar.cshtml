@model Sut.Entities.PreguntasFrecuentes
@{
    Sut.Security.UsuarioInfo user = ViewBag.Usuario as Sut.Security.UsuarioInfo; 
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>*@
            <h4 class="modal-title">@ViewBag.Title</h4>
        </div>

        @using (Html.BeginForm("Guardar", "Seguridad/Ayuda", FormMethod.Post, new { @id = "form-modal-editar" }))
        {
            @Html.HiddenFor(model => model.PreguntasID)


            <div class="modal-body form-horizontal">

                @if (user.Rol != 1)
                {
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Telefono </label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Anxeo</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextBoxFor(model => model.Anexo, new { @class = "form-control input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Correo Electrónico:</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextBoxFor(model => model.Correo, new { @class = "form-control input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Pregunta</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Respuesta del Administrador</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Titulo</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control input-sm", @readonly = true })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Contenido</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextAreaFor(model => model.Contenido, new { @class = "form-control input-sm", @readonly = true })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Respuesta Telefono</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.DropDownListFor(model => model.RespuestaTelefono, ViewBag.respuesta as List<SelectListItem>, new { @class = "form-control input-sm", @readonly = true, @disabled = "disabled" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Publicar </label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.DropDownListFor(model => model.EstadoPublicar, ViewBag.publicar as List<SelectListItem>, new { @class = "form-control input-sm", @readonly = true, @disabled = "disabled" })

                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Telefono </label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control input-sm", @readonly = true })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Anxeo</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextBoxFor(model => model.Anexo, new { @class = "form-control input-sm", @readonly = true })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Correo Electrónico:</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextBoxFor(model => model.Correo, new { @class = "form-control input-sm", @readonly = true })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Pregunta</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control input-sm", @readonly = true })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Respuesta del Administrador</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Titulo</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control input-sm" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Contenido</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.TextAreaFor(model => model.Contenido, new { @class = "form-control input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Respuesta Telefono</label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.DropDownListFor(model => model.RespuestaTelefono, ViewBag.respuesta as List<SelectListItem>, new { @class = "form-control input-sm" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Publicar </label>
                        <div class="col-sm-9 col-xs-12">
                            @Html.DropDownListFor(model => model.EstadoPublicar, ViewBag.publicar as List<SelectListItem>, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                } 

            </div>
            <div id="msgEditar"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm" onclick="sut.EditarPregunta.guardar()"><i class="fa fa-save"></i> Guardar</button>
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-close"></i> Cancelar</button>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="modal-ventana-editar">
    <div id="ventana-container-editar">

    </div>
</div>

<script>

    sut.EditarPregunta = {
        guardar: function () {
            if ($("#form-modal-editar").valid()) {
                var model = $('#form-modal-editar').serialize();
                $.ajax({
                    type: "POST",
                    //url: "/Seguridad/Ayuda/Guardar",
                    url: '@Url.Content("~/Seguridad/Ayuda/Guardar")',
                    data: model,
                    dataType: 'json',
                    beforeSend: function () {
                        $("#msgEditar").hide();
                        sut.wait.appendProgress('.modal-footer');
                        $('#form-modal-editar button').eq(0).attr("disabled", "disabled");
                        $('#form-modal-editar button').eq(1).attr("disabled", "disabled");
                    },
                    complete: function () {
                        sut.wait.removeProgress('.modal-footer');
                        $('#form-modal-editar button').eq(0).removeAttr("disabled");
                        $('#form-modal-editar button').eq(1).removeAttr("disabled");
                    },
                    success: function (result) {
                        $('#modal-ventana').modal('hide');
                        sut.msg.success(result.mensaje, function () {

                                sut.preguntas.listar(1);
                        });
                    },
                    error: function (result) {
                        sut.wait.removeProgress('.modal-footer');
                        $('#form-modal-editar button').eq(0).removeAttr("disabled");
                        $('#form-modal-editar button').eq(1).removeAttr("disabled");
                        sut.error.show('msgEditar', result.responseText);
                    }
                });
            }
        }
    };

    $(function () {
        debugger;
        if (@user.Rol != 1) {
            $('#form-modal-editar').validate({
                errorPlacement: function (error, element) {
                    if (element.parent('div.input-group').length > 0) {
                        error.insertAfter(element.parent('div.input-group'));
                    } else {
                        error.insertAfter(element);
                    }
                },
                rules: {
                    Telefono: 'required',
                    Anexo: 'required',
                    Descripcion: 'required',
                    Correo: 'required',

                },
                messages: {

                }
            });
        } else {

            $('#form-modal-editar').validate({
                errorPlacement: function (error, element) {
                    if (element.parent('div.input-group').length > 0) {
                        error.insertAfter(element.parent('div.input-group'));
                    } else {
                        error.insertAfter(element);
                    }
                },
                rules: {
                    Titulo: 'required',
                    Contenido: 'required',

                },
                messages: {

                }
            });
        }

    });

</script>


