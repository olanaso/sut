        generar: function (table, lista,tipo) {
            debugger;
            var tabla = table.children('tbody');
            tabla.children('tr').remove();
            var rows = '';
            var numero = (table.data('pagesize') * table.data('page')) - table.data('pagesize');
            $.each(lista, function (i, r) {
                if (multi)
                {
                    rows += sut.string.format('<tr class="rowselect"><td><input id="chkbuscarRecurso'+tipo+'{0}" type="checkbox" value="{0}|{1}|{2}|{3}" /></td><td>{1}</td></tr>',
                        r.RecursoId, r.Nombre, r.Tipo, r.TipoId);
