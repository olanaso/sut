
@using Sut.Entities
@model Expediente
@{
    Sut.Security.UsuarioInfo user = ViewBag.Usuario as Sut.Security.UsuarioInfo;


    ViewBag.Icon = "fa fa-video-camera";
    ViewBag.Title = "Mensaje Principal SUT ";
    ViewBag.Descripcion = "";

}


<div id="mensajes">
    @{Html.RenderPartial("_Error");}
</div>

@Html.HiddenFor(model => model.ExpedienteId)

@*@Html.Partial("_Filtros")*@

<link ref="~/Content/Areas/Simplificacion/Dashboard/Dashboard.css" rel="stylesheet" />
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">




<div class="row">

    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <div class="pull-left">

                            <h4>Administrar el mensaje principal del SUT</h4> 
                        </div>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                        </div>

                    </div>

                    <div class="box-body">

                        <div id="editor-container">
                            <p>Ingrese el cuerpo del mensaje principal</p>
                        </div>
                    </div>

                    <div class="box-footer">
                        <button id="btneliminar" type="button" class="btn btn-danger" id="confirmDelete">Guardar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>



</div>


<div id="data"></div>




<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="~/Scripts/MsjPrincipal/msjPrincipal.js"></script>



