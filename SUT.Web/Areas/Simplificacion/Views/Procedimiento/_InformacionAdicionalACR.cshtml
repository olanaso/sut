
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>*@
            <h4 class="modal-title">Información Adicional</h4>
        </div>
        <div class="modal-body">

            <div class="table-responsive">
                <table id="tblCanales" class="table table-condensed table-bordered table-striped"> 
                    <tbody>


                        <tr>
                            @if (@ViewBag.codigo == 1)
                            {
                                <td width="100px">Descripción :</td>
                                <td>
                                    @*<textarea class="form-control input-sm" disabled="disabled" style="height:170px;width: 400px">@Model.Objetivo</textarea>*@
                                     @Model.Objetivo 
                                </td>
                            }
                            else if (@ViewBag.codigo == 2)
                            {
                                <td width="100px">Descripción :</td>
                                <td>
                                    @*<textarea class="form-control input-sm" disabled="disabled" style="height:170px;width: 400px">@Model.Organo</textarea>*@
                                  @Model.Organo 
                                </td>
                            }
                            else
                            {

                                <td width="100px">Descripción :</td>


                            }
                        </tr> 
                    </tbody>
                </table>
            </div>
             
        </div> 
        <div class="modal-footer"> 
            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-close"></i> Cancelar</button>
        </div>
    </div>
</div>

 




