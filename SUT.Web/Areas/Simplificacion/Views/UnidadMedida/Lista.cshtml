                <a href="#edit-info-basica1" data-toggle="tab" onclick="javascript:sut.UnidadMedida.visualizar(1)" aria-expanded="false" style="border-radius: 10px;"><i class="fa fa-file"></i> Tipos de Norma</a>
            </li>
        }

        @if (@ViewBag.TipoRecurso == 3)
        {
            <li class="@activar">
